mixin accordeon(data)
  - console.log(data)
  .accordeon(class=data.modifiers ? data.modifiers : null)
    each item in data.items
      .accordeon-item
        .accordeon-header
          p!=item.title
          .accordeon-opener
            svg(width='20' height='20' role='img' aria-hidden='true' focusable='false')
              use(xlink:href='./assets/sprite.svg#cross')
        .accordeon-body
          .content-block
            p!=item.text

